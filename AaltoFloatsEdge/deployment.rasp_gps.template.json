{
  "$schema-template": "4.0.0",
  "modulesContent": {
    "$edgeAgent": {
      "properties.desired": {
        "schemaVersion": "1.1",
        "runtime": {
          "type": "docker",
          "settings": {
            "minDockerVersion": "v1.25",
            "loggingOptions": "",
            "registryCredentials": {
              "aaltofloats": {
                "username": "$CONTAINER_REGISTRY_USERNAME_aaltofloats",
                "password": "$CONTAINER_REGISTRY_PASSWORD_aaltofloats",
                "address": "aaltofloats.azurecr.io"
              }
            }
          }
        },
        "systemModules": {
          "edgeAgent": {
            "type": "docker",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-agent:1.2",
              "createOptions": {}
            },
            "env": {
              "ResourceId": {
                  "value": "$AZURE_IOTHUB_RESOURCE_ID"
              },
              "UploadTarget": {
                  "value": "$AZURE_UPLOAD_TARGET"
              },
              "LogAnalyticsWorkspaceId": {
                  "value": "$AZURE_WORKSPACE_ID"
              },
              "LogAnalyticsSharedKey": {
                  "value": "$AZURE_PRIMARY_KEY"
              }
            }
          },
          "edgeHub": {
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-hub:1.2",
              "createOptions": {
                "HostConfig": {
                  "PortBindings": {
                    "5671/tcp": [
                      {
                        "HostPort": "5671"
                      }
                    ],
                    "8883/tcp": [
                      {
                        "HostPort": "8883"
                      }
                    ],
                    "443/tcp": [
                      {
                        "HostPort": "443"
                      }
                    ]
                  }
                }
              }
            }
          }
        },
        "modules": {
          "GNSSModule": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULES.GNSSModule}",
              "createOptions": {
                "NetworkingConfig": {
                  "EndpointsConfig": {
                    "host": {}
                  }
                },
                "HostConfig": {
                  "Privileged": true,
                  "Binds": [
                    "/dev:/dev",
                    "/run/udev:/run/udev:ro",
                    "/home/pi/logs:/app/logs"
                  ],
                  "NetworkMode": "host"
                }
              }
            }
          },
          "IoTEdgeMetricsCollector": {
            "settings": {
                "image": "mcr.microsoft.com/azureiotedge-metrics-collector:1.0",
                "createOptions": ""
            },
            "type": "docker",
            "env": {
                "ResourceId": {
                    "value": "$AZURE_IOTHUB_RESOURCE_ID"
                },
                "UploadTarget": {
                    "value": "$AZURE_UPLOAD_TARGET"
                },
                "LogAnalyticsWorkspaceId": {
                    "value": "$AZURE_WORKSPACE_ID"
                },
                "LogAnalyticsSharedKey": {
                    "value": "$AZURE_PRIMARY_KEY"
                }
            },
            "status": "running",
            "restartPolicy": "always",
            "version": "1.0"
          }
        }
      }
    },
    "$edgeHub": {
      "properties.desired": {
        "schemaVersion": "1.2",
        "routes": {
          "GNSSModuleToIoTHub": "FROM /messages/modules/GNSSModule/outputs/* INTO $upstream"
        },
        "storeAndForwardConfiguration": {
          "timeToLiveSecs": 7200
        }
      }
    }
  }
}